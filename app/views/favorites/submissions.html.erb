<%= render partial: "shared/header", locals: {custom_header: "#{@user.username}'s favorites"} %>
<% if @submissions.count < 1 %>
    <p><%= @user.username %> hasn't added any favorite submissions yet.</p>
<% else %>
    <div class="submissions">
        <% @submissions.each_with_index do |submission, index| %>
            <div class="submission-partial">
                <p class="submission-index"><%= index + 1 %>.</p>
                <%= render partial: "shared/submission", locals: {submission: submission} %>
            </div>
        <% end %>
    </div>
<% end %>
<%= render "shared/footer" %>